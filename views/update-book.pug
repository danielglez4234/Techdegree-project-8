extends layout

block content
    h1.align_initial Update Book

    if errors
      ul.error
        li *Title is required
        li *Author is required
        li *Year has to be between 1700 and the current year

    form.align_initial(action="/books/" + book.id, method="post")
      p
        label(for='title') Title
        input#title(name='title', type='text', value=book.title)
      p
        label(for='author') Author
        input#author(name='author', type='text', value=book.author)
      p
        label(for='genre') Genre
        input#genre(name='genre', type='text', value=book.genre)
      p
        label(for='year') Year
        input#year(name='year', type='text', value=book.year)

      if errors
        p.error_submit Oops! Something went wrong, make sure you follow the instructions above.

      p
        input.submit(type='submit', value='Update Book')
    form.align_initial(method='post', action="/books/" + book.id + "/delete", onsubmit="return confirm('Do you really want to delete this book?');")
      p
        input.delete(type='submit', value='Delete Book')
      p
        a.button(href="/books") Cancel
