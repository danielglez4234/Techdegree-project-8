extends layout

block content
    h1.align_initial New Book

    if errors
      ul.error
        li *Title is required
        li *Author is required
        li *Year it has to be between 1700 and the current year

    form.align_initial(action="/books/new", method="post")
      p
        label(for='title') Title
        input#title(name='title', type='text')
      p
        label(for='author') Author
        input#author(name='author', type='text')
      p
        label(for='genre') Genre
        input#genre(name='genre', type='text')
      p
        label(for='year') Year
        input#year(name='year', type='text')

      if errors
        p.error_submit Oops! Something went wrong, make sure you follow the instructions above.

      p
        input.submit(type='submit', value='Create New Book')
      p
        a.button(href="/books") Cancel
